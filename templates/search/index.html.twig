{% extends 'base.html.twig' %}

{% block title %}
    Produit
{% endblock %}

{% block body %}


    {% if not product is defined %}
        <p> aucun produit </p>
    {% else %}
        {% for produit in product %}
            <div class="col-md-6 offset-md-3 align-self-center">
                <div style="border:1px solid black;border-radius:6px;">
                    <div class="card text-center">
                        <h1 class="card-header">{{ produit.name}}</h1>
                        <div class="card-body">
                            <p> {{ produit.description}} </p>
                            <p> {{ produit.price}} â‚¬</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}